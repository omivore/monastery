{

    "manifest_version": 2,
    "name": "Monastery",
    "version": "1.3.2",
    "applications": {
        "gecko": {
            "id": "monastery@omivore.com",
            "strict_min_version": "42.0"
        }
    },

    "description": "Monastery restricts your browsing session and blocks and limits time spent on a user-supplied blacklist.",
    "homepage_url": "https://github.com/omivore/monastery",
    "icons": {
        "48": "icons/monastery.svg"
    },

    "permissions": ["tabs", "notifications", "storage"],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icons/monastery.svg",
        "default_title": "Monastery",
        "default_popup": "popup/status_panel.html",
        "browser_style": false
    },
    "options_ui": {
        "page": "options/options.html",
        "browser_style": false
    }
}
